                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ew_name"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="@string/e_waste"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/kal"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/ew_desc"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/times"
                        android:textColor="#455A64" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_marginStart="45dp"
                    android:contentDescription="@string/profileImgDes"
                    android:onClick="removeFromCart"
                    android:tag="ew" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/pc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/my_bg"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    app:cardCornerRadius="50dp"
                    android:layout_height="60dp" >

                    <ImageView
                        android:id="@+id/pc_image"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:background="@drawable/my_bg"
                        app:srcCompat="@drawable/pc_bottle"
                        android:contentDescription="@string/profileImgDes" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pc_name"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:text="@string/pc_bottle"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/kal"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pc_desc"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/times"
                        android:textColor="#455A64" />
                </LinearLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete"
                    android:layout_marginStart="45dp"
                    android:contentDescription="@string/profileImgDes"
                    android:onClick="removeFromCart"
                    android:tag="pc" />
            </LinearLayout>





        </LinearLayout>
    </ScrollView>


